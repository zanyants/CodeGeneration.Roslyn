<?xml version="1.0" encoding="utf-8" ?>
<Project ToolsVersion="14.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <CodeGenerationRoslynToolsPath Condition=" '$(CodeGenerationRoslynToolsPath)' == '' ">$(CodeGenerationRoslynToolsRootPath)$(CodeGenerationRoslynToolsSubPath)</CodeGenerationRoslynToolsPath>
    <CodeGenerationRoslynFilesListFile>$(IntermediateOutputPath)_CodeGeneration.Roslyn.GeneratedFiles.txt</CodeGenerationRoslynFilesListFile>
    <PrepareResourcesDependsOn>
      GenerateCodeFromAttributes;
      $(PrepareResourcesDependsOn)
    </PrepareResourcesDependsOn>

    <CoreCompileDependsOn>
      GenerateCodeFromAttributes;
      $(CoreCompileDependsOn)
    </CoreCompileDependsOn>
  </PropertyGroup>

  <UsingTask TaskName="GenerateCodeFromAttributes" AssemblyFile="$(CodeGenerationRoslynToolsPath)CodeGeneration.Roslyn.Tasks.dll" />

  <Target Name="GenerateCodeFromAttributes" DependsOnTargets="ResolveReferences" BeforeTargets="CoreCompile" Inputs="@(Compile)" Outputs="$(CodeGenerationRoslynFilesListFile)" >
    <GenerateCodeFromAttributes
      Compile="@(Compile)"
      ReferencePath="@(ReferencePath)"
      TargetName="GenerateCodeFromAttributes"
      GeneratorAssemblySearchPaths="@(GeneratorAssemblySearchPaths)"
      IntermediateOutputDirectory="$(IntermediateOutputPath)">
      <Output TaskParameter="GeneratedCompile" ItemName="GeneratedCodeFromAttribute_Compile" />
      <Output TaskParameter="GeneratedCompile" ItemName="FileWrites" />
      <Output TaskParameter="AdditionalWrittenFiles" ItemName="FileWrites" />
    </GenerateCodeFromAttributes>
    <WriteLinesToFile
      File="$(CodeGenerationRoslynFilesListFile)"
      Lines="@(GeneratedCodeFromAttribute_Compile)"
      Overwrite="true"
      Encoding="utf-8" />
    <Touch
      Files="$(CodeGenerationRoslynFilesListFile)"
      Time="$([System.DateTime]::UtcNow.AddSeconds(1).ToString('o'))" />
  </Target>

  <Target Name="GenerateCodeFromAttributes_After" AfterTargets="GenerateCodeFromAttributes">
    <ReadLinesFromFile
      File="$(CodeGenerationRoslynFilesListFile)">
      <Output
        TaskParameter="Lines"
        ItemName="Compile" />
      <Output
        TaskParameter="Lines"
        ItemName="FileWrites" />
    </ReadLinesFromFile>
  </Target>
</Project>
